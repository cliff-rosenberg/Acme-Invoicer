{{!-- This is the form for inputting new Customer data --}}
<div class="container w-50 p-3 my-3 border border-dark rounded-1">
<form class="form-outline" method="POST" action="/api/customer">
    <div class="row mb-3">
    <label for="company" class="form-label">Company Name</label>
    <input type="text" id="company" class="form-control" name="company_name" placeholder="Company">
    </div>
    <div class="row mb-3">
    <label for="contact" class="form-label">Contact Name</label>
    <input type="text" id="contact" class="form-control" name="contact_name" placeholder="Contact">
    </div>
    <div class="row mb-3">
    <label for="address" class="form-label">Customer Address</label>
    <input type="text" id="address" class="form-control" name="address" placeholder="Address">
    </div>
    <div class="row mb-3">
    <label for="phone" class="form-label">Phone #</label>
    <input type="tel" id="phone" class="form-control" name="phone_number" placeholder="xxx-xxx-xxxx">
    </div>
    <div class="row mb-3">
    <label for="email" class="form-label">Email address</label>
    <input type="email" id="email" class="form-control" name="email_address" placeholder="name@example.com">
    </div>
    <input class="col-md-1 btn btn-primary" type="submit" value="Save">
    <input class="col-md-2 ms-2 btn btn-secondary" type="button" value="Clear Form" onClick="window.location.reload(true)">
</form>
</div>
